<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WalidMohmmedOdev1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WalidMohmmedOdev1"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Icon="home.png"
        Title="Ana Syafa"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
     Icon="krediheasplama.png"
     Title="Kredi Hesaplama"
     ContentTemplate="{DataTemplate local:KrediHesaplamaPage}"
     Route="KrediHesaplamaPage"
     />

    <ShellContent
       Icon="heightweight.png"
     Title="Vicut Kitle Indeksi"   
     ContentTemplate="{DataTemplate local:VicutKitleIndeksiPage}"
     Route="VicutKitleIndeksiPage"
        />

    <ShellContent
        Icon="colorselector.png"
        Title="Renk Seçici"
        ContentTemplate="{DataTemplate local:RenkSeciciPage}"
        Route="RenkSeciciPage" />

    <ShellContent
        Icon="yapilacaklar.png"
        Title="Yapılacaklar"
        ContentTemplate="{DataTemplate local:YapilacaklarPage}"
        Route="YapilacaklarPage" />

</Shell>
