<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WalidMohmmedOdev1.VicutKitleIndeksiPage"
             Title="VicutKitleIndeksiPage">

    <StackLayout Padding="20">

        <Label Text="BMI Calculator" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20"/>

        <Entry Placeholder="Boyunuz (cm)" x:Name="HeightEntry" Keyboard="Numeric" Margin="0,0,0,10"/>
        <Entry Placeholder="Kilonuz (kg)" x:Name="WeightEntry" Keyboard="Numeric" Margin="0,0,0,10"/>

        <Button Text="BMI Hesapla" Clicked="CalculateBMI_Clicked" BackgroundColor="#4CAF50" TextColor="White" Margin="0,10,0,10"/>

        <Label x:Name="BmiResultLabel" FontSize="18" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>

    </StackLayout>
    
    
</ContentPage>